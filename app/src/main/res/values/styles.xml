<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget"></style>

    <style name="Widget.CircleSliderLayout">
        <item name="thumb">@drawable/scrubber_control_selector_holo</item>
    </style>

    <style name="Theme.HwWeather" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@color/mariner_blue</item>
    </style>

    <style name="Widget.HwWeather"></style>

    <style name="Widget.HwWeather.Favorite">
        <item name="android:background">@drawable/favorite_selector</item>
    </style>

    <style name="Widget.HwWeather.City" parent="CardView.Light">
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/padding_large</item>
    </style>

    <style name="Widget.HwWeather.Daily"></style>
    <style name="TextAppearance.HwWeather.Daily.Text" parent="android:TextAppearance">
        <item name="android:textColor">@color/white_100</item>
    </style>
    <style name="TextAppearance.HwWeather.Daily.Text.MinTemperature">
        <item name="android:textSize">@dimen/textSize_large</item>
    </style>
    <style name="TextAppearance.HwWeather.Daily.Text.MaxTemperature">
        <item name="android:textSize">@dimen/textSize_large</item>
    </style>
    <style name="TextAppearance.HwWeather.Daily.Text.Day">
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Widget.HwWeather.Hourly"></style>
    <style name="TextAppearance.HwWeather.Hourly.Text" parent="android:TextAppearance">
        <item name="android:textColor">@color/white_100</item>
    </style>
    <style name="TextAppearance.HwWeather.Hourly.Text.Temperature">
        <item name="android:textSize">46sp</item>
    </style>
    <style name="TextAppearance.HwWeather.Hourly.Text.TemperatureUnit">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.HwWeather.Hourly.Text.Hour">
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>


</resources>
